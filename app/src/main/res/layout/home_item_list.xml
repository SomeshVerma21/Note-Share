<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="noteBook"
            type="com.vermaji.noteshare.database.NoteProperty" />
        <variable
            name="clickListener"
            type="com.vermaji.noteshare.mainUI.homeFragment.HomeItemListener" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/idImgView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="10dp"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/ic_note_book"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/idTitleText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@{noteBook.title}"
                />
            <TextView
                android:id="@+id/idDescText"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:text="@{noteBook.description}"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                >

                <TextView
                    android:id="@+id/idPriceOfNote"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:textStyle="italic"
                    android:text="@{noteBook.price}"
                    />

                <Button
                    android:id="@+id/idBuyNowBtn"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="2dp"
                    android:text="@string/buy_now"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:onClick="@{()->clickListener.onClick(noteBook)}"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
