<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_note_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_note_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/noteshare_logos"
            android:scaleType="centerCrop"
            />
    </com.google.android.material.card.MaterialCardView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Indecent Arragements"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_note_image"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_note_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.5"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_note_title"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_star"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="3dp"
        android:src="@drawable/ic_star_icon"
        app:layout_constraintStart_toEndOf="@id/tv_note_rating"
        app:layout_constraintTop_toBottomOf="@id/tv_note_title"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_note_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Free"
        android:textColor="#00FF2A"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:maxLines="2"
        android:gravity="start"
        app:layout_constraintStart_toEndOf="@id/img_star"
        app:layout_constraintTop_toBottomOf="@id/tv_note_title"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>